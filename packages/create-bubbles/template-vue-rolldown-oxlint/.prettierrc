{
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "printWidth": 100,
  "proseWrap": "never",
  "semi": false,
  "importOrder": ["^(vue|vue-router)$", "^([a-z]|@[a-z])", "", ".*"],
  "plugins": ["@ianvs/prettier-plugin-sort-imports", "@prettier/plugin-oxc"],
  "overrides": [
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "**/*.{js,mjs,cjs,jsx}",
      "options": {
        "plugins": ["prettier-plugin-oxc"],
        "parser": "oxc"
      }
    },
    {
      "files": "**/*.{ts,mts,cts,tsx}",
      "options": {
        "plugins": ["@prettier/plugin-oxc"],
        "parser": "oxc-ts"
      }
    }
  ]
}
